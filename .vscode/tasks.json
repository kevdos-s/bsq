{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current file",
      "type": "shell",
      "command": "cc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make all",
      "type": "shell",
      "command": "make",
      "args": ["all"],
      "options": {
        "cwd": "${workspaceFolder}/BSQ"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
